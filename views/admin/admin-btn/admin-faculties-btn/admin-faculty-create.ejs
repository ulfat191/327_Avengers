<!-- CREATE Faculty (Button) -->
<button type="button"
        class="btn btn-primary"
        data-bs-toggle="modal"
        data-bs-target="#createFaculty">
    <i class="bi bi-mortarboard"></i> New Faculty <i class="bi bi-plus-lg"></i>
</button>
<!-- /CREATE Faculty (Button) -->

<!-- CREATE Faculty (Floating Form) -->
<div class="modal fade"
     id="createFaculty"
     data-bs-backdrop="static"
     data-bs-keyboard="false"
     tabindex="-1"
     aria-labelledby="staticBackdropLabel"
     aria-hidden="true">
    <div class="modal-dialog floating-card">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title fw-bold" id="staticBackdropLabel">New Faculty <i class="bi bi-plus-lg"></i></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <form class="row" action="/admin-faculties" method="post">

                    <!-- CRUD Information -->
                    <input type="hidden" name="CRUD" value="ADMIN_CREATE_FACULTY">
                    <!-- /CRUD Information -->

                    <div class="col-md-6">
                        <label for="firstName" class="form-label">First Name</label>
                        <input type="text"
                               class="form-control"
                               id="firstName"
                               name="firstName"
                               placeholder="Thomas"
                               required>
                    </div>

                    <div class="col-md-6">
                        <label for="lastName" class="form-label">Last Name</label>
                        <input type="text"
                               class="form-control"
                               id="lastName"
                               name="lastName"
                               placeholder="Edison"
                               required>
                    </div>

                    <div class="col-md-12 mt-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email"
                               class="form-control"
                               id="email"
                               name="email"
                               placeholder="name@example.com"
                               required>
                    </div>

                    <div class="col-md-12 mt-3 mb-4">
                        <label for="university" class="form-label">University</label>
                        <input type="text"
                               class="form-control"
                               id="university"
                               name="university"
                               placeholder="North South University"
                               required>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Register</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- /CREATE Faculty (Floating Form) -->