<!doctype html>
<html lang="en" dir="ltr">

    <head>
        <meta charset="utf-8">

        <!-- =====  BOOTSTRAP 5 ICONS (CDN) ===== -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.1/font/bootstrap-icons.css">

        <!-- =====  BOOTSTRAP 5 (CDN) ===== -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
              rel="stylesheet"
              integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
              crossorigin="anonymous">

        <!-- =====  CUSTOM CSS ===== -->
        <link rel="stylesheet" href="css/admin.css">

        <title>Admin Portal</title>
    </head>

    <body>

        <!-- Navbar -->
        <div class="navbar-spacing">
            <nav class="navbar color-blue m-1">

                <!-- Sidebar Trigger Button -->
                <button class="navbar-toggle-button navbar-toggler text-light"
                        type="button"
                        data-bs-toggle="offcanvas"
                        data-bs-target="#offcanvasExample"
                        aria-controls="offcanvasExample">
                    <span class="data-bs-target="></span>
                    <i class="bi bi-toggles text-light"></i>
                </button>
                <!-- /Sidebar Trigger Button -->

                <!-- Text -->
                <a class="navbar-brand ms-auto text-light navbar-text" href="#">Admin</a>
                <!-- /Text -->

                <!-- Logout -->
                <form action="/logout" method="post">

                    <!-- CRUD Information -->
                    <input type="hidden" name="auth" value="admin-auth">
                    <!-- /CRUD Information -->

                    <button class="navbar-brand btn btn-danger btn-style" type="submit">
                        <i class="bi bi-power"></i>
                    </button>
                </form>
                <!-- /Logout -->
            </nav>
        </div>
        <!-- /Navbar -->

        <!-- Sidebar -->
        <div class="offcanvas offcanvas-start color-blue text-white fw-bold sidebar-nav m-1"
             tabindex="-1"
             id="offcanvasExample"
             aria-labelledby="offcanvasExampleLabel">

            <div class="offcanvas-body">

                <ul class="nav nav-pills" id="pills-tab" role="tablist">

                    <li class="dashboard nav-item mb-3 mt-5" role="presentation">
                        <form action="/admin-dashboard" method="post">

                            <!-- CRUD Information -->
                            <input type="hidden" name="CRUD" value="ADMIN_READ_DASHBOARD">
                            <!-- /CRUD Information -->

                            <a class="nav-link <%= sidebarNav.dashboard %>"
                               id="pills-home-tab"
                               data-bs-toggle="pill"
                               data-bs-target="#pills-home"
                               type="button"
                               role="tab"
                               aria-controls="pills-home"
                               aria-selected="true"
                               onclick="this.parentNode.submit();">
                                <span class="pe-1"><i class="bi bi-speedometer2"></i></span>
                                <span>Dashboard</span>
                            </a>
                        </form>
                    </li>

                    <li class="nav-item mb-3" role="presentation">
                        <form action="/admin-students" method="post">

                            <!-- CRUD Information -->
                            <input type="hidden" name="CRUD" value="ADMIN_READ_STUDENT">
                            <!-- /CRUD Information -->

                            <a class="nav-link <%= sidebarNav.student %>"
                               id="pills-home-tab"
                               data-bs-toggle="pill"
                               data-bs-target="#pills-home"
                               type="button"
                               role="tab"
                               aria-controls="pills-home"
                               aria-selected="true"
                               onclick="this.parentNode.submit();">
                                <span class="pe-1"><i class="bi bi-person-workspace"></i></span>
                                <span>Students</span>
                            </a>
                        </form>
                    </li>

                    <li class="nav-item mb-3" role="presentation">
                        <form action="/admin-faculties" method="post">

                            <!-- CRUD Information -->
                            <input type="hidden" name="CRUD" value="ADMIN_READ_FACULTY">
                            <!-- /CRUD Information -->

                            <a class="nav-link <%= sidebarNav.faculty %>"
                               id="pills-home-tab"
                               data-bs-toggle="pill"
                               data-bs-target="#pills-home"
                               type="button"
                               role="tab"
                               aria-controls="pills-home"
                               aria-selected="true"
                               onclick="this.parentNode.submit();">
                                <span class="pe-1"><i class="bi bi-mortarboard"></i></span>
                                <span>Faculties</span>
                            </a>
                        </form>
                    </li>

                    <li class="nav-item mb-3" role="presentation">
                        <form action="/admin-courses" method="post">

                            <!-- CRUD Information -->
                            <input type="hidden" name="CRUD" value="ADMIN_READ_COURSE">
                            <!-- /CRUD Information -->

                            <a class="nav-link <%= sidebarNav.courses %>"
                               id="pills-home-tab"
                               data-bs-toggle="pill"
                               data-bs-target="#pills-home"
                               type="button"
                               role="tab"
                               aria-controls="pills-home"
                               aria-selected="true"
                               onclick="this.parentNode.submit();">
                                <span class="pe-1"><i class="bi bi-window-stack"></i></span>
                                <span>Courses</span>
                            </a>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
        <!-- /Sidebar -->