<%- include("faculty-partials/faculty-header.ejs") -%>

<main class="main-dashboard pt-0">
    <div class="container-fluid">
        <div class="row">

            <!-- ADD Courses -->
            <div class="row">
                <div class="col mt-2">
                    <% if (typeof foundFaculty !== 'undefined' ) { %>
                        <%- include("faculty-btn/faculty-courses-btn/faculty-course-add.ejs", {foundFaculty: foundFaculty}) -%>
                    <% } %>
                </div>
            </div>
            <!-- /ADD Courses -->

            <div class="col-12 mt-2">
                <div class="card pt-1">
                    <div class="card-body">
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>Course Code</th>
                                    <th>Course Details</th>
                                    <th>Credit</th>
                                    <th>Semester</th>
                                    <th style="width: 0">Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (typeof foundGrades !== 'undefined') { %>
                                    <% foundGrades.forEach((grade) => { %>
                                        <tr>
                                            <td><%= grade.courseCode %></td>
                                            <td><%= grade.courseDetails %></td>
                                            <td><%= grade.courseCredit %></td>
                                            <td><%= grade.semesterName %></td>
                                            <td>
                                                <!-- DELETE Courses -->
                                                <%- include("faculty-btn/faculty-courses-btn/faculty-course-delete.ejs", {grade: grade}) -%>
                                                <!-- /DELETE Courses -->
                                            </td>
                                        </tr>
                                    <% }); %>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include("faculty-partials/faculty-footer.ejs") -%>