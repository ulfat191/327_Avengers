<%- include("faculty-partials/faculty-header.ejs") -%>

<main class="main-dashboard pt-0">
    <div class="container-fluid">
        <div class="row">
            <!-- General Information -->
            <div class="col mt-2">
                <div class="card">
                    <!-- General Information -->
                    <div class="card-header fw-bold text-center"><i class="bi bi-box-seam"></i> General Information</div>
                    <div class="card-body">
                        <table class="table table-hover">
                            <% if (typeof foundFaculty !== 'undefined' ) { %>
                                <tr>
                                    <th>Name:</th>
                                    <td><%= foundFaculty.firstName %> <%= foundFaculty.lastName %></td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <th>Email:</th>
                                    <td><%= foundFaculty.email %></td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <th>Education:</th>
                                    <td><%= foundFaculty.university %></td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <th>Registation Status:</th>
                                    <% if(foundFaculty.registrationStatus === true) { %>
                                        <td>Active</td>
                                    <% } else { %>
                                        <td>Inactive</td>
                                    <% } %>
                                    <td></td>
                                </tr>
                                <tr>
                                    <th>Semester Status:</th>
                                    <% if(foundFaculty.semesterStatus === true) { %>
                                        <td>Active</td>
                                    <% } else { %>
                                        <td>Inactive</td>
                                    <% } %>
                                    <td>
                                        <form action="/faculty-profile" method="post">

                                            <!-- CRUD Information -->
                                            <input type="hidden" name="CRUD" value="FACULTY_UPDATE_PROFILE_STATUS">
                                            <input type="hidden" name="_id" value="<%= foundFaculty._id %>">
                                            <!-- /CRUD Information -->

                                            <button type="button"
                                                    class="btn btn-dark"
                                                    onclick="this.parentNode.submit();">
                                                <i class="bi bi-toggles2"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            <% } %>
                        </table>
                    </div>
                    <!-- /General Information -->
                </div>
            </div>
            <!-- /General Information -->

            <!-- Personal Information -->
            <div class="col mt-2">
                <div class="card">
                    <div class="card-header fw-bold text-center"><i class="bi bi-journal-text"></i> Personal Information</div>
                    <div class="card-body">
                        <table class="table table-hover">
                            <% if (typeof foundFaculty !== 'undefined' ) { %>
                                <tr>
                                    <th>Cell Phone:</th>
                                    <td><%= foundFaculty.phone %></td>
                                </tr>
                                <tr>
                                    <th>Date of Birth:</th>
                                    <td><%= foundFaculty.dob %></td>
                                </tr>
                                <tr>
                                    <th>Citizenship:</th>
                                    <td><%= foundFaculty.citizenship %></td>
                                </tr>
                                <tr>
                                    <th>Mailing Address:</th>
                                    <td><%= foundFaculty.address %></td>
                                </tr>
                            <% } %>
                        </table>
                        <!-- Update Personal Information -->
                        <div class="card-footer">
                            <%- include("faculty-btn/faculty-profile-btn/faculty-profile-update.ejs", {foundFaculty: foundFaculty}) %>
                        </div>
                        <!-- /Update Personal Information -->
                    </div>
                </div>
            </div>
            <!-- /Personal Information -->
        </div>
    </div>
</main>

<%- include("faculty-partials/faculty-footer.ejs") -%>