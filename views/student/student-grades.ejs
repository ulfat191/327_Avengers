<%- include("student-partials/student-header.ejs") -%>

<main class="main-dashboard pt-0">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 mt-2">
                <div class="card pt-1">
                    <div class="card-body">
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>Course Code</th>
                                    <th>Course Details</th>
                                    <th>Credit</th>
                                    <th>Faculty</th>
                                    <th>Semester</th>
                                    <th>Grade</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (typeof foundGrades !== 'undefined') { %>
                                    <% foundGrades.forEach((found) => { %>
                                        <% found.courseStudent.forEach((student) => { %>
                                            <% if (student.courseStudentId === sidebarNav.studentId) { %>
                                                <tr>
                                                    <td><%= found.courseCode %></td>
                                                    <td><%= found.courseDetails %></td>
                                                    <td><%= found.courseCredit %></td>
                                                    <td><%= found.courseFacultyFirstName %> <%= found.courseFacultyLastName %></td>
                                                    <td><%= found.semesterName %></td>
                                                    <td><%= student.courseStudentGrade %></td>
                                                </tr>
                                            <% } %>
                                        <% }); %>
                                    <% }); %>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include("student-partials/student-footer.ejs") -%>